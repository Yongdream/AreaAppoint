<view class="container">

<!-- 传入的社区参数 -->
<view class="section">
    <view class="section-title">社区信息</view>
    <view class="list-item">
        <view class="item-row">{{HandlerComm}}</view>
    </view>
    <view class="list-item">
        <view class="item-row">{{currentCommMan}}</view>
    </view>
    <view class="list-item">
            <view class="item-row">{{currentCommTel}}</view>
    </view>
</view>

<!-- 预约信息部分 -->
<view class="section">
    <view class="section-title">预约信息</view>
    <view class="list-item">
        <!-- <view class="item-row">预约社区
            <input type="text" value="{{HandlerComm}}" placeholder="输入预约社区" bindinput="handleInput" data-field="HandlerComm" class="text-input" />
        </view> -->
        <view class="item-row">预约日期
            <input type="date" value="{{HandlerDate}}" placeholder="输入预约日期" bindinput="handleInput" data-field="HandlerDate" class="text-input" />
        </view>
        <view class="item-row">预约时间
            <input type="time" value="{{HandlerTime}}" placeholder="输入预约时间" bindinput="handleInput" data-field="HandlerTime" class="text-input" />
        </view>

        <!-- 分割线 -->
        <view class="divider"></view>

        <view class="item-row">访客单位
            <input type="text" value="{{HandlerUnit}}" placeholder="输入预约单位" bindinput="handleInput" data-field="HandlerUnit" class="text-input" />
        </view>
        <view class="item-row">联系人员
            <input type="tel" value="{{visitorMan}}" placeholder="输入联系人姓名" bindinput="handleInput" data-field="visitorMan" class="text-input" />
        </view>
        <view class="item-row">联系方式
            <input type="tel" value="{{visitorTel}}" placeholder="输入联系方式" bindinput="handleInput" data-field="visitorTel" class="text-input" />
        </view>
        <view class="item-row">访客人数
            <input type="tel" value="{{visitorNum}}" placeholder="输入访客人数" bindinput="handleInput" data-field="visitorNum" class="text-input" />
        </view>
    </view>
</view>

<button class="submit-button" bindtap="submitFunction">提交表单</button>
</view>
