<view class="container">

<!-- 预约信息部分 -->
<view class="section">
    <view class="section-title">预约信息</view>
    <view wx:for="{{listHandler}}" class="list-item">
        <view class="item-row">预约日期：<text class="item-content">{{item.HandlerDate}}</text></view>
        <view class="item-row">预约单位：<text class="item-content">{{item.HandlerUnit}}</text></view>
        <view class="item-row">预约社区：<text class="item-content">{{item.HandlerComm}}</text></view>
        <view class="item-row">访客联系人：<text class="item-content">{{item.visitorTel}}</text></view>
        <!-- <view class="item-row">访客人数：<text class="item-content">{{item.visitorNum}}</text></view> -->
        <view class="item-row">访客人数
            <input type="number" value="{{visitorNum}}" bindinput="onVisitorNumChange" class="number-input"/>
        </view>
    </view>
</view>

<button class="submit-button" bindtap="submit">提交表单</button>

<!-- 社区信息部分 -->
<view class="section">
    <view class="section-title">社区信息</view>
    <view wx:for="{{listCommunity}}" class="list-item">
        <view class="item-row">社区名称：<text class="item-content">{{item.CommName}}</text></view>
        <view class="item-row">社区联系人：<text class="item-content">{{item.CommMan}}</text></view>
    </view>
</view>

</view>
