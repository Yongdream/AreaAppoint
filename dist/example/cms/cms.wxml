<view class="container">

<!-- 预约信息部分 -->
<view class="section">
    <view class="section-title">预约信息</view>
    <view class="list-item">
        <view class="item-row">预约日期：
            <input type="date" value="{{HandlerDate}}" bindinput="handleInput" data-field="HandlerDate" class="date-input" />
        </view>
        <view class="item-row">预约社区
            <input type="text" value="{{HandlerComm}}" placeholder="输入预约社区" bindinput="handleInput" data-field="HandlerComm" class="text-input" />
        </view>
        <view class="item-row">预约单位
            <input type="text" value="{{HandlerUnit}}" placeholder="输入预约单位" bindinput="handleInput" data-field="HandlerUnit" class="text-input" />
        </view>
        <view class="item-row">联系电话
            <input type="tel" value="{{visitorTel}}" placeholder="输入联系人电话" bindinput="handleInput" data-field="visitorTel" class="text-input" />
        </view>
        <view class="item-row">访客人数
            <input type="number" value="{{visitorNum}}" placeholder="输入访客数量" bindinput="handleInput" data-field="visitorNum" class="number-input" />
        </view>
    </view>
</view>

<button class="submit-button" bindtap="submitFunction">提交表单</button>
</view>
